{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "./contracts",
      "./mutations",
      "./subgraph",
      "./ui"
    ],
    "nohoist": [
      "**/graph-ts"
    ]
  },
  "scripts": {
    "build": "yarn build:mutations && yarn build:subgraph",
    "build:ci": "yarn build:mutations && yarn build:subgraph && yarn build:ui:ci",
    "build:mutations": "lerna exec --scope token-registry-mutations -- yarn build",
    "build:subgraph": "lerna exec --scope token-registry -- yarn build",
    "build:ui": "lerna exec --scope curation-starter -- yarn build",
    "build:ui:ci": "lerna exec --scope curation-starter -- yarn build:ci",
    "start:env": "concurrently \"docker-compose up\" \"yarn:deploy\"",
    "start:ui": "lerna exec --scope curation-starter -- yarn start",
    "deploy": "yarn deploy:contracts && yarn deploy:subgraph",
    "deploy:contracts": "lerna exec --scope token-registry-contracts -- yarn deploy",
    "deploy:subgraph": "lerna exec --scope token-registry -- yarn deploy"
  },
  "devDependencies": {
    "lerna": "3.20.2"
  }
}
